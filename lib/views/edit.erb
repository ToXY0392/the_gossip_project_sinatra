<html>
  <head>
    <meta charset="utf-8" />
    <title>Modifier le potin <%= id %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet">
  </head>

  <body class="bg-light">
    <div class="container py-5" style="max-width: 800px;">

      <h1 class="mb-4 text-center">Modifier le potin #<%= id %></h1>

      <form action="/gossips/<%= id %>/edit/" method="post" class="card shadow-sm p-4">
        <div class="mb-3">
          <label for="author" class="form-label">Auteur</label>
          <input
            type="text"
            name="gossip_author"
            id="author"
            class="form-control"
            value="<%= gossip.author %>"
            required>
        </div>

        <div class="mb-3">
          <label for="content" class="form-label">Contenu</label>
          <textarea
            name="gossip_content"
            id="content"
            class="form-control"
            rows="4"
            required><%= gossip.content %></textarea>
        </div>

        <div class="d-flex justify-content-between">
          <a href="/gossips/<%= id %>" class="btn btn-secondary">
            Annuler
          </a>

          <button type="submit" class="btn btn-primary">
            Sauvegarder les modifications
          </button>
        </div>
      </form>

    </div>
  </body>
</html>

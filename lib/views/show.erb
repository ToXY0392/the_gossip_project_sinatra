<html>
  <head>
    <meta charset="utf-8" />
    <title>THP Gossip News – Potin <%= id %></title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet">

    <style>
      body {
        margin: 0;
        background: #dedede;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      }

      header {
        background:#dedede;
      }

      /* card style “verre dépoli” comme sur l’index */
      .gossip-card {
        background: rgba(255,255,255,0.13);
        border-radius: 24px;
        border: 1px solid rgba(0,0,0,0.08);
        backdrop-filter: blur(18px);
        -webkit-backdrop-filter: blur(18px);
        padding: 26px 30px;
        box-shadow: 0 14px 40px rgba(0,0,0,0.45);
        color: #222;
        transition:
          transform .2s ease,
          box-shadow .2s ease,
          background-color .2s ease;
      }

      .gossip-card:hover {
        transform: scale(1.01);
        background: rgba(255,255,255,0.20);
        box-shadow: 0 18px 48px rgba(0,0,0,0.6);
      }

      .gossip-label {
        font-weight: 600;
      }

      .btn-soft {
        border-radius: 999px;
        padding: 8px 20px;
      }

      .btn-soft-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #222;
      }
      .btn-soft-warning:hover {
        background-color: #ffcd39;
        border-color: #ffcd39;
        color: #222;
      }

      .btn-soft-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
      }
      .btn-soft-secondary:hover {
        background-color: #7e8a93;
        border-color: #7e8a93;
        color: #fff;
      }

      .btn-soft-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
      }
      .btn-soft-danger:hover {
        background-color: #e55362;
        border-color: #e55362;
        color: #fff;
      }

      footer {
        background:#dedede;
      }
    </style>
  </head>

  <body>

    <!-- HEADER -->
    <header class="text-center py-4">
      <h1 class="fw-bold mb-1">Potin #<%= id %></h1>
      <p class="text-muted mb-0">Détails du potin</p>
    </header>

    <!-- CONTENU -->
    <main class="py-4">
      <div class="container" style="max-width: 900px;">

        <div class="gossip-card mb-4">
          <p class="mb-2">
            <span class="gossip-label">Auteur :</span>
            <span><%= gossip.author %></span>
          </p>

          <p class="mb-3">
            <span class="gossip-label">Contenu :</span><br>
            <span><%= gossip.content %></span>
          </p>

          <!-- Boutons d’action -->
          <div class="d-flex flex-wrap gap-2 mt-3">

            <!-- Modifier -->
            <a href="/gossips/<%= id %>/edit/"
               class="btn btn-soft btn-soft-warning">
              <i class="bi bi-pencil-square me-1"></i>
              Modifier ce potin
            </a>

            <!-- Retour à la liste -->
            <a href="/"
               class="btn btn-soft btn-soft-secondary">
              <i class="bi bi-arrow-left me-1"></i>
              Retour à la liste
            </a>

            <!-- Supprimer -->
            <form action="/gossips/<%= id %>/delete/" method="post" class="ms-auto">
              <button type="submit"
                      class="btn btn-soft btn-soft-danger"
                      onclick="return confirm('Tu es sûr de vouloir supprimer ce potin ?');">
                <i class="bi bi-trash3 me-1"></i>
                Supprimer
              </button>
            </form>

          </div>
        </div>

      </div>
    </main>

    <!-- FOOTER -->
    <footer class="text-center py-3 text-muted">
      <small>THP Gossip News – Sinatra project</small>
    </footer>

  </body>
</html>

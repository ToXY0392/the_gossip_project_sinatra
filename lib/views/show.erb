<html>
  <head>
    <meta charset="utf-8" />
    <title>THP Gossip News – Potin</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet">

    <style>
      body {
        background: #dedede;
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      }

      .card-gossip {
        border-radius: 20px;
      }
    </style>
  </head>

  <body>
    <!-- HEADER -->
    <header class="text-center py-4" style="background:#dedede; width:100%;">
      <div class="text-muted small mb-1">THP Gossip News</div>
      <h1 class="fw-bold mb-1">Potin #<%= id %></h1>
    </header>

    <!-- SECTION AVEC FOND -->
    <div style="
      background-image: url('https://images.unsplash.com/photo-1522202176988-66273c2fd55f?auto=format&fit=crop&w=1600&q=80');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      background-color: rgba(0,0,0,0.20);
      background-blend-mode: multiply;
      padding: 60px 0 80px 0;
      min-height: 70vh;
    ">
      <div class="container d-flex justify-content-center">
        <!-- CARD POTIN -->
        <div class="card shadow-sm border-0 card-gossip w-100" style="max-width: 800px; background:#ffffff;">
          <div class="card-body">

            <!-- Auteur + contenu -->
            <p class="mb-2">
              <strong>Auteur :</strong>
              <span class="ms-1"><%= gossip.author %></span>
            </p>

            <p class="mb-4">
              <strong>Contenu :</strong><br>
              <span><%= gossip.content %></span>
            </p>

            <!-- Ligne de boutons -->
            <div class="d-flex justify-content-end align-items-center pt-3 border-top">

              <!-- Retour à la liste -->
              <a href="/" class="btn btn-outline-secondary rounded-pill px-3 me-2">
                <i class="bi bi-arrow-left me-1"></i>
                Retour à la liste
              </a>

              <!-- Modifier ce potin -->
              <a href="/gossips/<%= id %>/edit/"
                 class="btn btn-primary rounded-pill px-3 me-2">
                <i class="bi bi-pencil-square me-1"></i>
                Modifier ce potin
              </a>

              <!-- Supprimer (formulaire POST) -->
              <form action="/gossips/<%= id %>/delete/" method="post" class="m-0">
                <button type="submit"
                        class="btn btn-outline-danger rounded-pill px-3"
                        onclick="return confirm('Supprimer ce potin ?');">
                  <i class="bi bi-trash me-1"></i>
                  Supprimer
                </button>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- FOOTER -->
    <footer class="text-center py-4 text-muted" style="background:#dedede; margin:0;">
      <p class="mb-2">Retrouve THP Gossip News sur :</p>

      <div class="d-flex justify-content-center gap-3 flex-wrap mt-2">

        <!-- Instagram -->
        <a href="https://www.instagram.com/the_hacking_project"
           target="_blank"
           class="btn btn-sm text-white rounded-pill px-3"
           style="background: radial-gradient(circle at 30% 30%, #fdf497 0, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%); border:none;">
          <i class="bi bi-instagram me-1"></i>
          Instagram
        </a>

        <!-- LinkedIn -->
        <a href="https://www.linkedin.com/school/the-hacking-project"
           target="_blank"
           class="btn btn-sm text-white rounded-pill px-3"
           style="background-color:#0A66C2; border:none;">
          <i class="bi bi-linkedin me-1"></i>
          LinkedIn
        </a>

        <!-- Site officiel -->
        <a href="https://www.thehackingproject.org"
           target="_blank"
           class="btn btn-sm text-white rounded-pill px-3"
           style="background-color:#444; border:none;">
          <i class="bi bi-globe me-1"></i>
          Site web
        </a>

      </div>
    </footer>
  </body>
</html>

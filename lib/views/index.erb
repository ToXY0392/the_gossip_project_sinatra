<html>
  <head>
    <meta charset="utf-8" />
    <title>THP Gossip News</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet">
  </head>

  <!-- fond global gris pour Ã©viter les zones blanches autour -->
  <body style="background:#dedede; margin:0;">

    <!-- HEADER : bande grise -->
    <header class="text-center py-5"
            style="background:#dedede; width:100%;">
      <h1 class="fw-bold mb-2">ðŸ§¨ THP Gossip News</h1>
      <p class="text-muted mb-0">
        Les rumeurs les plus inutiles, mais clairement les plus importantes.
      </p>
    </header>

    <!-- SECTION AVEC NOUVELLE IMAGE DE FOND + lÃ©ger assombrissement -->
    <div style="
      background-image: url('https://images.unsplash.com/photo-1522202176988-66273c2fd55f?auto=format&fit=crop&w=1600&q=80');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      background-color: rgba(0,0,0,0.18);     /* assombrit un peu l'image */
      background-blend-mode: multiply;        /* mÃ©lange couleur + image */
      padding: 40px 0;
      min-height: 70vh;
    ">

      <div class="container" style="max-width: 800px;">

        <!-- BOUTON NOUVEAU POTIN -->
        <div class="text-center mb-4">
          <a class="btn btn-primary btn-lg rounded-pill px-4" href="/gossips/new/">
            ðŸ’£ Nouveau potin
          </a>
        </div>

        <!-- LISTE DES POTINS -->
        <% if gossips.empty? %>

          <!-- message "aucun potin" : mÃªme style que card -->
          <div class="alert alert-light text-center"
               style="background:#ffffff; border-radius:20px;">
            Aucun potin pour le moment.<br>
            <strong>Tout le monde est trop sageâ€¦</strong>
          </div>

        <% else %>

          <% gossips.each_with_index do |gossip, index| %>

            <!-- CARD POTIN : BLANCHE -->
            <div class="card shadow-sm mb-4 border-0"
                 style="border-radius:20px; background-color:#ffffff;">

              <div class="card-body">

                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <span class="badge bg-info text-dark mb-1">
                      Potin #<%= index + 1 %>
                    </span>
                    <h5 class="fw-bold mb-0"><%= gossip.author %></h5>
                  </div>

                  <a href="/gossips/<%= index + 1 %>"
                     class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                    Voir le potin
                  </a>
                </div>

                <p class="mt-2 mb-0" style="font-size:1.05rem;">
                  <%= gossip.content %>
                </p>

              </div>
            </div>

          <% end %>

        <% end %>

      </div>
    </div>

    <!-- FOOTER : mÃªme gris que le header -->
    <footer class="text-center py-4 text-muted"
            style="background:#dedede; margin:0;">
      <p class="mb-2">Retrouve THP Gossip News sur :</p>

      <div class="d-flex justify-content-center gap-3 flex-wrap mt-2">

        <!-- Instagram -->
        <a href="https://www.instagram.com/the_hacking_project"
           target="_blank"
           class="btn btn-sm text-white rounded-pill px-3"
           style="background: radial-gradient(circle at 30% 30%, #fdf497 0, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%); border:none;">
          <i class="bi bi-instagram me-1"></i>
          Instagram
        </a>

        <!-- LinkedIn -->
        <a href="https://www.linkedin.com/school/the-hacking-project"
           target="_blank"
           class="btn btn-sm text-white rounded-pill px-3"
           style="background-color:#0A66C2; border:none;">
          <i class="bi bi-linkedin me-1"></i>
          LinkedIn
        </a>

        <!-- Site officiel -->
        <a href="https://www.thehackingproject.org"
           target="_blank"
           class="btn btn-sm text-white rounded-pill px-3"
           style="background-color:#444; border:none;">
          <i class="bi bi-globe me-1"></i>
          Site web
        </a>

      </div>
    </footer>

  </body>
</html>
